/* Funkcia pre spracovanie prichádzajúcich dát zo siete */
static bool appDataInd(NWK_DataInd_t *ind) {
    // Skontroluj, či je veľkosť dát správna
    if (ind->size == 2) {
        uint16_t adc_value = (ind->data[0] << 8) | ind->data[1];  // Získaj ADC hodnotu (spojením dvoch bajtov)

        // Teraz spracuj prijatú hodnotu (napr. zobraz ju cez UART)
        char buffer[32];
        snprintf(buffer, sizeof(buffer), "Prijata ADC hodnota: %u\n\r", adc_value);
        UART_SendString(buffer);  // Pošli cez UART

        // Môžeš pridať ďalšie spracovanie podľa potreby, napr. zobraziť stav
        if (adc_value > 100) {
            UART_SendString("Miesto je obsadené!\n\r");
        } else {
            UART_SendString("Miesto nie je obsadené.\n\r");
        }
    }
    return true;
}
